---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import Meloso from "../assets/Meloso.png";
import Banana from "../assets/Banana.png";
import OSPA from "../assets/OSPA.png";

const projects = [
     {
          title: "Meloso Brunch",
          description: "Web moderna y amigable para Melosobrunch Brunch & Coffee con chatbot vectorial integrado",
          image: Meloso
     },
     {
          title: "Banana Verde",
          description: "Web moderna, colorida y responsive para el chiringuito Banana Verde",
          image: Banana
     },
     {
          title: "O'SPA",
          description: "Web moderna inspirada en el sector cinematográfico para el local O'SPA",
          image: OSPA
     }];
---

<InfoLayout>
     <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh">
          <H1> Proyectos </H1>

          <ul class="mt-4 sm:mt-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-16 sm:gap-8">
               {projects.map((project) => (
                    <li>
                         <a class="group block hover:scale-105 hover:shadow-2xl hover:shadow-green-500/25 
                              transition-all duration-500 hover:-translate-y-3 hover:bg-green-900/30 
                              rounded-2xl p-8 border-2 border-green-500/30 hover:border-green-400 
                              h-[32rem]">  <!-- 1. CARD: h-[32rem] = 512px alto -->

                         <div class="flex flex-col h-full">
                              <div class="flex-shrink-0 mb-8">  <!-- 2. MÁS ESPACIO -->
                                   <img 
                                   src={project.image.src} 
                                   alt={project.title}
                                   class="w-full h-80 aspect-video object-center object-cover rounded-2xl shadow-2xl"  <!-- 3. IMAGEN: h-80 = 320px -->
                                   />
                              </div>
                              <div class="flex-1 flex flex-col justify-end p-6">
                                   <h2 class="text-2xl text-zinc-100 font-bold mb-3 leading-tight">  <!-- TEXTO: 2xl + bold -->
                                   {project.title}
                                   </h2>
                                   <p class="text-lg text-zinc-300 text-balance leading-relaxed">  <!-- TEXTO: lg -->
                                   {project.description}
                                   </p>
                              </div>
                         </div>
                         </a>
                    </li>
               ))}
          </ul>
     </div>
</InfoLayout>