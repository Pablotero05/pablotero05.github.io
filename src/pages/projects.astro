---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import Meloso from "../assets/Meloso.png";
import Banana from "../assets/Banana.png";
import OSPA from "../assets/OSPA.png";

const projects = [
     {
          title: "Meloso Brunch",
          description: "Web moderna y amigable para Melosobrunch Brunch & Coffee con chatbot vectorial integrado",
          image: Meloso
     },
     {
          title: "Banana Verde",
          description: "Web moderna, colorida y responsive para el chiringuito Banana Verde",
          image: Banana
     },
     {
          title: "O'SPA",
          description: "Web moderna inspirada en el sector cinematogr√°fico para el local O'SPA",
          image: OSPA
     }];
---

<InfoLayout>
  <div class="p-6 sm:pt-12 sm:px-16 pb-24 min-h-dvh">
    <H1> Proyectos </H1>

    <ul class="mt-8 sm:mt-16 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-12 sm:gap-16">
      {projects.map((project) => (
        <li>
          <a class="group block hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/25 transition-all duration-400 hover:-translate-y-3 hover:bg-blue-900/30 rounded-2xl p-8 sm:p-10 border border-blue-500/20 hover:border-blue-400 h-[32rem] min-w-0">
            <div class="flex flex-col h-full">
              <div class="flex-shrink-0 mb-8">
                <img 
                  src={project.image.src} 
                  alt={project.title} 
                  width={project.image.width}
                  height={project.image.height}
                  class="w-full h-80 aspect-[4/3] object-center object-cover rounded-2xl shadow-2xl"
                />
              </div>
              <div class="flex-1 flex flex-col justify-end p-6">
                <h2 class="text-2xl text-zinc-100 font-bold mb-3 leading-tight">{project.title}</h2>
                <p class="text-lg text-zinc-300 text-balance leading-relaxed">{project.description}</p>
              </div>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</InfoLayout>

