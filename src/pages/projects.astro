---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import Meloso from "../assets/Meloso.png";
import Banana from "../assets/Banana.png";
import OSPA from "../assets/OSPA.png";

const projects = [
     {
          title: "Meloso Brunch",
          description: "Web moderna y amigable para Melosobrunch Brunch & Coffee con chatbot vectorial integrado",
          image: Meloso
     },
     {
          title: "Banana Verde",
          description: "Web moderna, colorida y responsive para el chiringuito Banana Verde",
          image: Banana
     },
     {
          title: "O'SPA",
          description: "Web moderna inspirada en el sector cinematográfico para el local O'SPA",
          image: OSPA
     }];
---

<InfoLayout>
  <div class="p-4 sm:pt-8 sm:px-8 pb-20 min-h-dvh max-w-7xl mx-auto">  <!-- ← px-12→px-8 + max-w -->
    <H1> Proyectos </H1>

    <ul class="mt-4 sm:mt-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-12 lg:gap-16 xl:gap-20">  <!-- ← gap responsive -->
      {projects.map((project) => (
        <li class="justify-self-center">  <!-- ← Centra cada li -->
          <a class="group block hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/25 transition-all duration-300 hover:-translate-y-2 hover:bg-blue-900/20 rounded-xl p-6 sm:p-8 border border-blue-500/20 hover:border-blue-400 h-96 w-full max-w-md mx-auto">  <!-- ← w-full max-w-md -->
            <div class="flex flex-col h-full">
              <div class="flex-shrink-0 mb-6">
                <img 
                  src={project.image.src} 
                  alt={project.title} 
                  width={project.image.width}
                  height={project.image.height}
                  class="w-full aspect-[4/3] object-center object-cover rounded-xl shadow-xl"  <!-- ← Más cuadrada -->
                />
              </div>
              <div class="flex-1 flex flex-col justify-end p-4">
                <h2 class="text-lg text-zinc-100 font-semibold mb-2">{project.title}</h2>
                <p class="text-base text-zinc-400 text-balance">{project.description}</p>
              </div>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</InfoLayout>

