---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import Meloso from "../assets/Meloso.png";
import Banana from "../assets/Banana.png";
import OSPA from "../assets/OSPA.png";

const projects = [
     {
          title: "Meloso Brunch",
          description: "Web moderna y amigable para Melosobrunch Brunch & Coffee con chatbot vectorial integrado",
          image: Meloso
     },
     {
          title: "Banana Verde",
          description: "Web moderna, colorida y responsive para el chiringuito Banana Verde",
          image: Banana
     },
     {
          title: "O'SPA",
          description: "Web moderna inspirada en el sector cinematogr√°fico para el local O'SPA",
          image: OSPA
     }];
---

<InfoLayout>
  <div class="p-4 sm:pt-8 pb-20 min-h-dvh max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8">
    <H1>Proyectos</H1>

    <div class="mt-8 sm:mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12 xl:gap-16">
      {projects.map((project, index) => (
        <div class="w-full group">
          <a 
            href={`/proyectos/${index}`} 
            class="block w-full h-full p-6 border border-blue-500/20 rounded-xl hover:border-blue-400 hover:shadow-2xl hover:shadow-blue-500/25 hover:scale-105 hover:-translate-y-2 hover:bg-blue-900/20 transition-all duration-300 bg-blue-950/50"
          >
            <div class="flex flex-col h-full">
              <div class="flex-shrink-0 mb-6">
                <Image 
                  src={project.image} 
                  alt={project.title}
                  class="w-full aspect-[4/3] object-cover rounded-lg shadow-xl"
                />
              </div>
              <div class="flex-1 flex flex-col justify-end">
                <h2 class="text-xl font-bold text-white mb-2">{project.title}</h2>
                <p class="text-zinc-300 leading-relaxed">{project.description}</p>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>
  </div>
</InfoLayout>


